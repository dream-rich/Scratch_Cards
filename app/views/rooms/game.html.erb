<style>
body {
  background-image: url("");
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>
<header class="p-3 text-bg-dark">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li>
        <li><a href="#" class="nav-link px-2 text-white">About</a></li>
      </ul>

      <div class="text-end">
        <%= button_to "Leave Room", leave_room_path(@room), method: :delete, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</header>

<div class='container'>
  <div class="row p-4">
    <div class="col-3">
      <div class="mt-2 dropdown-menu position-static d-flex flex-column flex-lg-row align-items-stretch justify-content-start p-3 rounded-3 shadow-lg" data-bs-theme="white">
        <p class="fs-4 text-dark">Info Room</p>
        <nav class="col-lg-6">
          <ul class="list-unstyled d-flex flex-column gap-2 text-center">
            <li>
              <div>
                <strong> <%= label_tag :code, "Name: #{@room.name}", class: "d-block" %> </strong>
              </div>
            </li>
            <li>
              <div>
                <strong> <%= label_tag :code, "Code: #{@room.code}", class: "d-block" %> </strong>
              </div>
            </li>
            <li>
              <div>
                <strong> <%= label_tag :code, "Players: #{@game.players.count} / #{@room.players}" , class: "d-block" %> </strong>
              </div>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <div class="col">
      <div class="d-flex gap-2 justify-content-center py-5" id='current-players'>
        <% @game.players.each do |user| %>
          <span class="badge d-flex align-items-center p-1 pe-2 text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-pill">
            <img class="rounded-circle me-1" width="24" height="24" src="<%= user.gavatar %>" alt=""> <%= user.display_name %>
          <p class="mb-0 small text-truncate p-2 flex-shrink-1 text-warning"> <%= user.coins.to_i %> </p>
          </span>
        <% end %>

      </div>

      <div id='current-player'>
        <%= button_to 'Un-Ready', unready_room_path(@room), method: :put, class: "btn btn-warning d-grid gap-2 col-2 mx-auto" %>
      </div>

      <ul class='list-unstyled' id='current-cards'>
        <% @game_player.cards.each do |card| %>
          <li class='js-card'>
            <%= image_tag card.image_name, class: "img-thumbnail", width: 100 %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
  window.addEventListener("load", function() {
    $('#current-cards').on('click', '.js-card', function() {
      $(this).toggleClass('selected');
    })
  });
</script>

<script>
  window.addEventListener("load", function() {
    var pusher = new Pusher('6a99040438a45cf9bf25', {
      cluster: 'ap1'
    });

    var channel = pusher.subscribe("room-<%= @room.id %>");
    channel.bind('update', function(data) {
      var eventData = JSON.stringify(data);
      var eventData = JSON.parse(eventData)
      if (eventData.message == 'new player') {
        $.ajax( {
          url: "<%= players_room_path(@room.id, @game.id) %>",
          type: "GET",
        }).done(function(data) {
          $('#current-players').html(data);
        });
      }

    });
  });
</script>
