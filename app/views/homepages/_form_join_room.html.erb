<link href="https://fonts.googleapis.com/css2?family=Lily+Script+One&family=Righteous&display=swap" rel="stylesheet">
<%= form_tag join_private_rooms_path, method: :post, class: "form-join-room" do %>
  <div class="mt-3 dropdown-menu position-static d-flex flex-column flex-lg-row align-items-stretch justify-content-start p-3 rounded-3 shadow-lg" data-bs-theme="white">
    <p class="fs-3">Join a Room</p>
    <nav class="col-lg-8">
      <ul class="list-unstyled d-flex flex-column gap-2">
        <li>

          <div>
            <strong> <%= label_tag :code, "Room Code", class: "d-block" %> </strong>
            <%= text_field_tag :code %>
          </div>

        </li>

        <li>
          <div>
            <strong> <%= label_tag :code, "Password", class: "d-block" %> </strong>
            <%= password_field_tag :password %>
          </div>
        </li>

        <li>
          <div>
            <%= submit_tag "Join Room", class: "btn-outline-dark" %>
          </div>
        </li>
        
      </ul>
    </nav>
  </div>
<% end %>
